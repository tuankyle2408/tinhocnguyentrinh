<%- include('partials/header') %>

<main class="container" style="margin-top: 50px; max-width: 700px; padding-bottom: 50px;">
    <div class="section-header">
        <h2 style="color: #f37021;"><i class="fa fa-wrench"></i> CẬP NHẬT THÔNG TIN</h2>
    </div>

    <form action="/admin/edit/<%= product.id %>" method="POST" enctype="multipart/form-data" class="admin-form" style="background: #1e293b; padding: 30px; border-radius: 12px; border: 1px solid #334155;">
        
        <div class="form-group" style="margin-bottom: 20px;">
            <label style="color: #cbd5e1; display: block; margin-bottom: 8px;">Tên máy:</label>
            <input type="text" name="name" value="<%= product.name %>" required class="form-control" style="width: 100%; padding: 12px; background: #0f172a; color: white; border: 1px solid #334155; border-radius: 6px;">
        </div>

        <div style="display: flex; gap: 20px; margin-bottom: 20px;">
            <div style="flex: 1;">
                <label style="color: #cbd5e1; display: block; margin-bottom: 8px;">Hãng:</label>
                <input type="text" name="brand" value="<%= product.brand %>" class="form-control" style="width: 100%; padding: 12px; background: #0f172a; color: white; border: 1px solid #334155; border-radius: 6px;">
            </div>
            <div style="flex: 1;">
                <label style="color: #cbd5e1; display: block; margin-bottom: 8px;">Giá bán mới:</label>
                <input type="number" name="price" value="<%= product.price %>" required class="form-control" style="width: 100%; padding: 12px; background: #0f172a; color: white; border: 1px solid #334155; border-radius: 6px;">
            </div>
        </div>

        <div class="form-group" style="margin-bottom: 20px;">
            <label style="color: #cbd5e1; display: block; margin-bottom: 8px;">Cấu hình tóm tắt:</label>
            <input type="text" name="short_specs" value="<%= product.short_specs %>" class="form-control" style="width: 100%; padding: 12px; background: #0f172a; color: white; border: 1px solid #334155; border-radius: 6px;">
        </div>

        <div class="form-group" style="margin-bottom: 30px;">
            <label style="color: #cbd5e1; display: block; margin-bottom: 8px;">Hình ảnh (Để trống nếu giữ ảnh cũ):</label>
            <div style="background: #0f172a; padding: 15px; border-radius: 8px; text-align: center;">
                <img src="/images/<%= product.image %>" width="120" style="border-radius: 5px; margin-bottom: 10px; background: white;">
                <input type="file" name="image" accept="image/*" style="width: 100%; color: #94a3b8;">
            </div>
        </div>

        <div style="display: flex; gap: 15px;">
            <button type="submit" class="btn-submit" style="flex: 2; padding: 15px; background: #f37021; color: white; border: none; border-radius: 6px; font-weight: bold; cursor: pointer;">
                <i class="fa fa-save"></i> LƯU THAY ĐỔI
            </button>
            <a href="/admin" style="flex: 1; padding: 15px; background: #475569; color: white; text-align: center; text-decoration: none; border-radius: 6px; font-weight: bold;">HỦY</a>
        </div>
    </form>
</main>

<%- include('partials/footer') %>