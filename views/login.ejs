<%- include('partials/header') %>

<div style="max-width: 400px; margin: 100px auto; background: white; padding: 30px; border-radius: 10px; border-top: 5px solid #f37021; box-shadow: 0 4px 15px rgba(0,0,0,0.1);">
    <h2 style="text-align: center; color: #0056b3;">QUẢN TRỊ VIÊN</h2>
    <form action="/admin/login" method="POST">
        <div style="margin-bottom: 15px;">
            <label>Tài khoản:</label>
            <input type="text" name="username" required style="width: 100%; padding: 10px; margin-top: 5px; border: 1px solid #ddd; border-radius: 5px;">
        </div>
        <div style="margin-bottom: 20px;">
            <label>Mật khẩu:</label>
            <input type="password" name="password" required style="width: 100%; padding: 10px; margin-top: 5px; border: 1px solid #ddd; border-radius: 5px;">
        </div>
        <button type="submit" style="width: 100%; background: #0056b3; color: white; border: none; padding: 12px; border-radius: 5px; cursor: pointer; font-weight: bold; font-size: 16px;">
            ĐĂNG NHẬP
        </button>
    </form>
</div>

<%- include('partials/footer') %>