<%- include('partials/header') %>

<main class="container">
    <div class="banner-container">
        <img src="/images/main-banner.jpg" alt="Tin Học Nguyễn Trinh - Banner" class="banner-img">
    </div>

    <div class="business-info-bar">
        <div class="info-item">
            <i class="fas fa-check-circle"></i> MST: 6001789324
        </div>
        <div class="info-item">
            <i class="fas fa-map-marker-alt"></i> K11 Lý Thường Kiệt, Buôn Ma Thuột
        </div>
        <div class="info-item">
            <i class="fas fa-tools"></i> Sửa chữa Laptop - Máy in lấy liền
        </div>
    </div>

    <div class="section-title">
        <h2><i class="fa fa-laptop"></i> SẢN PHẨM MỚI VỀ</h2>
        <div class="line"></div>
    </div>

    <div class="product-grid">
        <% if(products && products.length > 0) { %>
            <% products.forEach(product => { %>
                <div class="product-card">
                    <div class="product-img">
                        <img src="/images/<%= product.image || 'no-image.png' %>" alt="<%= product.name %>">
                    </div>
                    <div class="product-info">
                        <p class="brand"><%= product.brand || 'Chính hãng' %></p>
                        <h3 class="product-name"><%= product.name %></h3>
                        <p class="specs"><%= product.short_specs || 'Liên hệ để xem cấu hình' %></p>
                        <div class="price-row">
                            <span class="price"><%= Number(product.price).toLocaleString() %>đ</span>
                        </div>
                        <a href="https://zalo.me/0396784712" class="btn-zalo">LIÊN HỆ ZALO</a>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <p style="text-align: center; grid-column: 1/-1; padding: 50px; color: #94a3b8;">
                Đang cập nhật danh sách máy tính và máy in mới nhất...
            </p>
        <% } %>
    </div>
</main>

<%- include('partials/footer') %>
